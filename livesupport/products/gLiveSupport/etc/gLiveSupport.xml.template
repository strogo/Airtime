        />
        <metadataType dcName          = "ls:isrcnumber"
                      id3Tag          = "TSRC"
                      localizationKey = "isrc_number"
        />
        <metadataType dcName          = "ls:catalognumber"
                      localizationKey = "catalog_number"
        />
        <metadataType dcName          = "ls:originalartist"
                      id3Tag          = "TOPE"
                      localizationKey = "original_artist"
